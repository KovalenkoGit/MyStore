@{
    ViewData["Title"] = "Додати новий товар";
}
@model ProductModel 

<div class="container-fluid">
    <h3 class="display-4">Додати товар</h3>

    <form method="post" enctype="multipart/form-data" asp-action="AddNewProduct" asp-controller="Product">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"></input>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category">
                <option value="">Виберіть категорію</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CoverPhoto" class="control-label"></label>
            <div class="input-group mb-3">
                <input asp-for="CoverPhoto" class="form-control" id="inputGroupFile02" accept=".jpg, .jpeg, .png">
                <label class="input-group-text" for="inputGroupFile02">Додати</label>
            </div>
            <span asp-validation-for="CoverPhoto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GalleryFiles" class="control-label"></label>
            <div class="input-group mb-3">
                <input asp-for="GalleryFiles" class="form-control" id="inputGroupFile02" accept=".jpg, .jpeg, .png">
                <label class="input-group-text" for="inputGroupFile02">Додати</label>
            </div>
            <span asp-validation-for="GalleryFiles" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="offset-sm-0 col-sm-2 grid">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
            <div class="col-sm-2 d-block grid">
                <a class="btn btn-outline-primary asp-area="Admin" asp-controller="Product" asp-action="GetAllProduct"> Відміна </a>
            </div>

        </div>

    </form>
</div>
